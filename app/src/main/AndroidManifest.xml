<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.upb.slidecaster" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddServerActivity"
            android:label="@string/title_activity_add_server"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.upb.slidecaster.MainActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.upb.slidecaster.MainActivity" />
        </activity>
        <activity
            android:name=".CollectionsActivity"
            android:label="@string/title_activity_collections"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.upb.slidecaster.MainActivity" />
        </activity>
        <activity
            android:name=".ProjectsActivity"
            android:label="@string/title_activity_projects"
            android:parentActivityName=".CollectionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.upb.slidecaster.CollectionsActivity" />
        </activity>
        <activity
            android:name=".EditorActivity"
            android:label="Editor"
            android:parentActivityName=".CollectionsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.upb.slidecaster.CollectionsActivity" />
        </activity>
    </application>

</manifest>
