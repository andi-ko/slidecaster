<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.upb.slidecaster.EditorActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Audio"
        android:id="@+id/recordAudioButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/publishButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/addPictureButton"
        android:layout_above="@+id/playButton"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publish"
        android:id="@+id/publishButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/addPictureButton"
        android:indeterminate="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/projectNameEditText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/projectNameTextView"
        android:layout_toLeftOf="@+id/recordAudioButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Project Name:"
        android:id="@+id/projectNameTextView"
        android:layout_alignBaseline="@+id/recordAudioButton"
        android:layout_alignBottom="@+id/recordAudioButton"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/seekBar" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/seekBar"
        android:layout_toLeftOf="@+id/addPictureButton"
        android:layout_below="@+id/recordAudioButton"
        android:id="@+id/linearEditor">

        <ImageView
            android:layout_width="162dp"
            android:layout_height="66dp"
            android:id="@+id/imageView"
            android:src="@drawable/chrysanthemum"
            android:layout_gravity="bottom" />

        <ImageView
            android:layout_width="146dp"
            android:layout_height="66dp"
            android:id="@+id/imageView2"
            android:src="@drawable/tulips"
            android:layout_below="@+id/addPictureButton"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="53dp"
            android:layout_gravity="bottom" />

    </LinearLayout>

</RelativeLayout>
